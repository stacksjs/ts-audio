{
  "name": "ts-audio",
  "type": "module",
  "version": "0.0.0",
  "description": "Zero-dependency TypeScript audio toolkit for modern media workflows.",
  "author": "Chris Breuer <chris@stacksjs.org>",
  "license": "MIT",
  "homepage": "https://github.com/stacksjs/ts-audio",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stacksjs/ts-audio.git"
  },
  "bugs": {
    "url": "https://github.com/stacksjs/ts-audio/issues"
  },
  "keywords": [
    "audio",
    "media",
    "codec",
    "demuxer",
    "muxer",
    "mp3",
    "wav",
    "aac",
    "flac",
    "ogg",
    "typescript",
    "zero-dependency"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "ts-audio": "./dist/bin/cli.js"
  },
  "files": [
    "README.md",
    "dist"
  ],
  "scripts": {
    "build": "bun build.ts",
    "lint": "bunx --bun pickier .",
    "lint:fix": "bunx --bun pickier . --fix",
    "changelog": "bunx changelogen --output CHANGELOG.md",
    "release": "bun run changelog && bunx bumpp -r --all",
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit"
  },
  "devDependencies": {
    "@stacksjs/clapp": "^0.2.0",
    "better-dx": "^0.2.5",
    "bun-plugin-dtsx": "^0.9.9"
  },
  "optionalDependencies": {
    "@ts-audio/mp3": "workspace:*",
    "@ts-audio/wav": "workspace:*",
    "@ts-audio/aac": "workspace:*",
    "@ts-audio/flac": "workspace:*",
    "@ts-audio/ogg": "workspace:*"
  }
}
